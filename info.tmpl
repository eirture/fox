<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Fox Engine Info</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

  <style>
    body {
      padding: 20px;
    }

    [data-bs-toggle="collapse"] {
      cursor: pointer;
    }
  </style>

</head>

<body>

  <h2 id="engine-options">Engine Options</h2>
  <table class="table table-hover table-sm mb-4">
    <thead>
      <tr>
        <th width="30%">Option</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Addr</td>
        <td><code>{{ .engine.Options.Addr }}</code></td>
      </tr>
      <tr>
        <td>Env</td>
        <td><code>{{ .engine.Options.Env }}</code></td>
      </tr>
      <tr>
        <td>RedirectTrailingSlash</td>
        <td><code>{{ .engine.Options.RedirectTrailingSlash }}</code></td>
      </tr>
      <tr>
        <td>RedirectFixedPath</td>
        <td><code>{{ .engine.Options.RedirectFixedPath }}</code></td>
      </tr>
      <tr>
        <td>HandleMethodNotAllowed</td>
        <td><code>{{ .engine.Options.HandleMethodNotAllowed }}</code></td>
      </tr>
      <tr>
        <td>HandleOPTIONS</td>
        <td><code>{{ .engine.Options.HandleOPTIONS }}</code></td>
      </tr>
      <tr>
        <td>ForwardedByClientIP</td>
        <td><code>{{ .engine.Options.ForwardedByClientIP }}</code></td>
      </tr>
      <tr>
        <td>RemoteIPHeaders</td>
        <td>
          <code>[
          {{- range $index, $element := .engine.Options.RemoteIPHeaders -}}
            {{- if $index -}}, {{ end -}}
            {{- $element -}}
          {{- end -}}
          ]</code>
        </td>
      </tr>
      <tr>
        <td>TrustedPlatform</td>
        <td><code>{{ .engine.Options.TrustedPlatform }}</code></td>
      </tr>
      <tr>
        <td>DefaultContentType</td>
        <td><code>{{ .engine.Options.DefaultContentType }}</code></td>
      </tr>
      <tr>
        <td>PanicHandler</td>
        <td><code>{{ nameOfFunction .engine.PanicHandler }}</code></td>
      </tr>
      <tr>
        <td>NotFound Handlers</td>
        <td>
          {{ if .not_found }}
          <div class="card card-body" style="margin-top: 5px; padding: 5px 8px;">
            <ul class="list-unstyled" style="margin: 0">
              {{- range $handler := .not_found -}}
              <li><code>{{- nameOfFunction $handler -}}</code></li>
              {{- end }}
            </ul>
          </div>
          {{ end }}
        </td>
      </tr>
      <tr>
        <td>NoMethod Handlers</td>
        <td>
          {{ if .no_method }}
          <div class="card card-body" style="margin-top: 5px; padding: 5px 8px;">
            <ul class="list-unstyled" style="margin: 0">
              {{- range $handler := .no_method -}}
              <li><code>{{- nameOfFunction $handler -}}</code></li>
              {{- end }}
            </ul>
          </div>
          {{ end }}
        </td>
      </tr>
    </tbody>
  </table>


  {{ if .sessionOptions }}
  <h2 id="global-middlewares">Session Options</h2>
  <table class="table table-hover table-sm mb-4">
    <thead>
      <tr>
        <th width="30%">Option</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Store</td>
        <td>{{ .sessionOptions.Store }}</td>
      </tr>
      <tr>
        <td>KeyPairs</td>
        <td>********************************</td>
      </tr>
      <tr>
        <td>Name</td>
        <td>{{ .sessionOptions.Name }}</td>
      </tr>
      <tr>
        <td>Path</td>
        <td>{{ .sessionOptions.Path }}</td>
      </tr>
      <tr>
        <td>Domain</td>
        <td>{{ .sessionOptions.Domain }}</td>
      </tr>
      <tr>
        <td>MaxAge</td>
        <td>{{ .sessionOptions.MaxAge }}</td>
      </tr>
      <tr>
        <td>Secure</td>
        <td>{{ .sessionOptions.Secure }}</td>
      </tr>
      <tr>
        <td>HttpOnly</td>
        <td>{{ .sessionOptions.HTTPOnly }}</td>
      </tr>
      <tr>
        <td>SameSite</td>
        <td>{{ .sessionOptions.SameSite }}</td>
      </tr>
    </tbody>
  </table>
  {{ end }}


  {{ if .databaseConfig }}
  <h2 id="global-middlewares">Database Config</h2>
  <table class="table table-hover table-sm mb-4">
    <thead>
      <tr>
        <th width="30%">Option</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Dialect</td>
        <td>{{ .databaseConfig.Dialect }}</td>
      </tr>
      <tr>
        <td>Database</td>
        <td>{{ .databaseConfig.Database }}</td>
      </tr>
      <tr>
        <td>Host</td>
        <td>{{ .databaseConfig.Host }}</td>
      </tr>
      <tr>
        <td>Port</td>
        <td>{{ .databaseConfig.Port }}</td>
      </tr>
      <tr>
        <td>Username</td>
        <td>{{ .databaseConfig.Username }}</td>
      </tr>
      <tr>
        <td>Password</td>
        <td>********************************</td>
      </tr>
      <tr>
        <td>Encoding</td>
        <td>{{ .databaseConfig.Encoding }}</td>
      </tr>
      {{ if .databaseConfig.ConnPool }}
      <tr>
        <td>MaxIdleConns</td>
        <td>{{ .databaseConfig.ConnPool.MaxIdleConns }}</td>
      </tr>
      <tr>
        <td>MaxOpenConns</td>
        <td>{{ .databaseConfig.ConnPool.MaxOpenConns }}</td>
      </tr>
      <tr>
        <td>ConnMaxLifeTime</td>
        <td>{{ .databaseConfig.ConnPool.ConnMaxLifeTime }}</td>
      </tr>
      <tr>
        <td>ConnMaxIdleTime</td>
        <td>{{ .databaseConfig.ConnPool.ConnMaxIdleTime }}</td>
      </tr>
      {{ end }}
    </tbody>
  </table>
  {{ end }}


  <h2 id="global-middlewares">Global Middlewares</h2>
  <table class="table table-hover table-sm mb-4">
    <thead>
      <tr>
        <th>Middleware Handler</th>
      </tr>
    </thead>
    <tbody>
      {{- range $handler := .handlers }}
      <tr>
        <td>{{- nameOfFunction $handler -}}</td>
      </tr>
      {{- end }}
    </tbody>
  </table>


  <h2 id="routers">Routers</h2>
  <table class="table table-hover table-sm mb-4">
    <thead>
      <tr>
        <th width="100">Method</th>
        <th width="250">Path</th>
        <th>Handler</th>
        <th width="120">Handlers</th>
      </tr>
    </thead>
    <tbody>
      {{- range $index, $route := .routes }}
      <tr data-bs-toggle="collapse" data-bs-target="#router-{{- $index -}}">
        <td>
          <span class="badge text-bg-light">{{- $route.Method -}}</span>
        </td>
        <td>
          <span class="badge text-bg-light">{{- $route.Path -}}</span>
        </td>
        <td>
          <span class="badge text-bg-light">{{- $route.Handler -}}</span>

          <div class="collapse" id="router-{{- $index -}}">
            <div class="card card-body" style="margin-top: 5px; padding: 5px 8px;">
              <ul class="list-unstyled" style="margin: 0">
                {{- range $handler := $route.Handlers -}}
                <li><code>{{- nameOfFunction $handler -}}</code></li>
                {{- end }}
              </ul>
            </div>
          </div>
        </td>
        <td><small>{{- len $route.Handlers }} handlers</small></td>
      </tr>
      {{- end }}
    </tbody>
  </table>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
    crossorigin="anonymous"></script>

</body>

</html>